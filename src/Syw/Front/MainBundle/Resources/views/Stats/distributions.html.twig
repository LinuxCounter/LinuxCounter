{% extends "SywFrontMainBundle::base.html.twig" %}
{% trans_default_domain "syw_front_main_stats_distributions" %}

{% block body %}

    <!-- Page Content -->
    <div class="row">
        <div class="col-sm-8">
            <div class="row">
                <div class="col-sm-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">{{ title }}</h3>
                        </div>
                        <div class="panel-body">

                            {% if paginationAAA.getTotalItemCount > 0 %}
                                <table class="table table-striped">
                                    <thead>
                                    <tr>
                                        <th>
                                            {{ knp_pagination_sortable(paginationAAA, 'Name', 'a.name', {'defaultDirection' : 'asc'}) }}
                                        </th>
                                        <th>
                                            {{ knp_pagination_sortable(paginationAAA, 'Machines', 'a.machinesnum', {'defaultDirection' : 'desc'}) }}
                                        </th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for row in paginationAAA %}
                                        <tr>
                                            <td>
                                                {{ row.name }}
                                            </td>
                                            <td>
                                                {{ row.machinesnum|number_format }}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>

                                {{ knp_pagination_render(paginationAAA) }}
                            {% else %}
                                No data.
                            {% endif %}

                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{ include('SywFrontMainBundle:Common:_guess.html.twig') }}
        {{ include('SywFrontMainBundle:Common:_stats_links.html.twig') }}
    </div>

{% endblock %}
